    <div class="breadcrumb">
        <div class="container">
            <div class="breadcrumb-inner">
                <ul class="list-inline list-unstyled">
                    <li><a href="~/Home/Index">@EpostWeb.Resources.HomeTexts.Home</a></li>
                    <li class='active'>@EpostWeb.Resources.HomeTexts.Checkout</li>
                </ul>
            </div><!-- /.breadcrumb-inner -->
        </div><!-- /.container -->
    </div><!-- /.breadcrumb -->
    <div class="body-content">
        <div class="container">
            <div class="checkout-box ">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-group checkout-steps" id="accordion">
                            <!-- checkout-step-01  -->
                            <div class="panel panel-default checkout-step-01">
                                <!-- panel-heading -->
                                <div class="panel-heading">
                                    <h4 class="unicase-checkout-title">
                                        <a data-toggle="collapse" class="" data-parent="#accordion" href="#collapseOne">
                                            <span>1</span>@EpostWeb.Resources.HomeTexts.CheckoutMethod
                                        </a>
                                    </h4>
                                </div>
                                <!-- panel-heading -->
                                <div id="collapseOne" class="panel-collapse collapse in">
                                    <!-- panel-body  -->
                                    <div class="panel-body">
                                        <div class="row">
                                            <!-- guest-login -->
                                            <div class="col-md-6 col-sm-6 guest-login">
                                                <h4 class="checkout-subtitle">@EpostWeb.Resources.HomeTexts.GuestRegisterLogin</h4>
                                                <p class="text title-tag-line">@EpostWeb.Resources.HomeTexts.RegisterForFuture:</p>
                                                <!-- radio-form  -->
                                                <form class="register-form" role="form">
                                                    <div class="radio radio-checkout-unicase">
                                                        <input id="guest" type="radio" name="text" value="guest" checked>
                                                        <label class="radio-button guest-check" for="guest">@EpostWeb.Resources.HomeTexts.CheckoutAsGuest</label>
                                                        <br>
                                                        <input id="register" type="radio" name="text" value="register">
                                                        <label class="radio-button" for="register">@EpostWeb.Resources.HomeTexts.Register</label>
                                                    </div>
                                                </form>
                                                <!-- radio-form  -->
                                                <h4 class="checkout-subtitle outer-top-vs">@EpostWeb.Resources.HomeTexts.RegisterAndSaveTime</h4>
                                                <p class="text title-tag-line ">@EpostWeb.Resources.HomeTexts.RegisterForFuture:</p>

                                                <ul class="text instruction inner-bottom-30">
                                                    <li class="save-time-reg">- @EpostWeb.Resources.HomeTexts.FastAndEasyCheckOut</li>
                                                    <li>- @EpostWeb.Resources.HomeTexts.EasyAccess</li>
                                                </ul>
                                                <button type="submit" class="btn-upper btn btn-primary checkout-page-button checkout-continue ">@EpostWeb.Resources.HomeTexts.Continue</button>
                                            </div>
                                            <!-- guest-login -->
                                            <!-- already-registered-login -->
                                            <div class="col-md-6 col-sm-6 already-registered-login">
                                                <h4 class="checkout-subtitle">@EpostWeb.Resources.HomeTexts.AlreadyRegistered?</h4>
                                                <p class="text title-tag-line">@EpostWeb.Resources.HomeTexts.PleaseLoginBelow:</p>
                                                <form class="register-form" role="form">
                                                    <div class="form-group">
                                                        <label class="info-title" for="exampleInputEmail1">@EpostWeb.Resources.HomeTexts.EmailAddress <span>*</span></label>
                                                        <input type="email" class="form-control unicase-form-control text-input" id="exampleInputEmail1" placeholder="">
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="info-title" for="exampleInputPassword1">@EpostWeb.Resources.HomeTexts.Password <span>*</span></label>
                                                        <input type="password" class="form-control unicase-form-control text-input" id="exampleInputPassword1" placeholder="">
                                                        <a href="#" class="forgot-password">@EpostWeb.Resources.HomeTexts.ForgotYourPassword?</a>
                                                    </div>
                                                    <button type="submit" class="btn-upper btn btn-primary checkout-page-button">@EpostWeb.Resources.HomeTexts.Login</button>
                                                </form>
                                            </div>
                                            <!-- already-registered-login -->
                                        </div>
                                    </div>
                                    <!-- panel-body  -->
                                </div><!-- row -->
                            </div>
